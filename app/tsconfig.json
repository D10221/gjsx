{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "typeRoots": ["../node_modules/@types", "../node_modules/@gi-types"],
    "types": ["gjs-environment", "base-types", "gtk3-types"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "fragment",
    "reactNamespace": ""
  },
  "include": ["src/"]
}
